@model Restorant.Web.InputModels.Questions.AskInputModel
@{
    ViewBag.Title = "Ask question";
}

<div style="width:80%; padding-left:15%">
    <h1>@ViewBag.Title</h1>
    @using (Html.BeginForm("Ask", "Questions", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "col-md-1 control-label" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.Title, new { placeholder = "Title123" })
            </div>
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.Content)
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Ask question" class="btn btn-primary btn-lg" />
        </div>
    }
</div>