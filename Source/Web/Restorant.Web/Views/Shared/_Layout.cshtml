<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nasko's Restorant</title>
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", false)
    <link rel='stylesheet' media='screen and (min-width: 120px) and (max-width: 701px)' href='~/Content/medium.css' />
    <link rel="stylesheet" href="~/Content/simple-sidebar.css" />
    <link href="http://fonts.googleapis.com/css?family=Cookie" rel="stylesheet" type="text/css">
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                </li>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Feedbacks", "Create", "CommentForm")</li>
                <li>@Html.ActionLink("Reservation", "Create", "Reservation")</li>
                <li>@Html.ActionLink("Ask question", "Ask", "Questions")</li>
                <li>@Html.ActionLink("Join Our Team", "Create", "Resume")</li>
                <li>@Html.ActionLink("My Reservations", "IndexReservations", "GetReservations")</li>
                <li>@Html.ActionLink("About", "Index", "Home")</li>
                <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
                @if (!Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                }
                else
                {
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                }
            </ul>
        </div>
    </div>
    <img id="video-background" src="http://i1204.photobucket.com/albums/bb414/Atanas_Dachenski/NaskoRestaurant/background_zpsnagammqk.jpg" />
    @if (!Request.IsAuthenticated)
    {
        @Html.Partial("LoginModal")
    }
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#menu-toggle" class="navbar-right glyphicon glyphicon-home" id="menu-toggle"></a>
                    </li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div style="height:50px"></div>
    <h1 class="brand">Nasko's</h1>
    <div class="address-bar">Breakfast & seafood restaurant <br> San Jose, CA 95101 | 123.456.7890</div>
    <div class="container body-content">
        <noscript>
            <div class="alert alert-danger" role="alert">
                <p>
                    <h1>Your browser does not support JavaScript!</h1>
                    <div>You must enable JavaScript to Get All the Features</div>
                </p>
            </div>
        </noscript>
        @if (TempData["Notification"] != null)
            {
            <div class="alert alert-info" role="alert">@this.TempData["Notification"]</div>
        }
        @RenderBody()
      
        <footer class="footer-distributed">
            <div class="footer-left">
                <h3>Nasko's<span>Restaurant</span></h3>
                <p class="footer-links">
                    @Html.ActionLink("Home", "Index", "Home")
                    ·
                    @Html.ActionLink("Feedbacks", "Create", "CommentForm")
                    ·
                    @Html.ActionLink("Make Reservation", "Create", "Reservation")
                    ·
                    @Html.ActionLink("Contact", "Index", "Contact")
                </p>
                <p class="footer-company-name">Nasko's Restaurant &copy; @DateTime.Now.ToLongDateString() </p>
            </div>
            <div class="footer-center">
                <div>
                    <img src="http://i1204.photobucket.com/albums/bb414/Atanas_Dachenski/NaskoRestaurant/pinFoot_zpszqmskuwt.png">
                    <p><span>21 Random Street</span> California, USA</p>
                </div>
                <div>
                    <img src="http://i1204.photobucket.com/albums/bb414/Atanas_Dachenski/NaskoRestaurant/phoneFoot2_zpsgvyuytpm.png">
                    <p>+1 555 123456</p>
                </div>
                <div>
                    <img src="http://i1204.photobucket.com/albums/bb414/Atanas_Dachenski/NaskoRestaurant/openFoot2_zpsba6artdm.png">
                    <p><a href="https://github.com/adachenski/NaskosRestaurant">Open Source Project</a></p>
                </div>
            </div>
            <div class="footer-right">
                <p class="footer-company-about">
                    <span>About the company</span>
                    Lorem ipsum dolor sit amet, consectateur adispicing elit. Fusce euismod convallis velit, eu auctor lacus vehicula sit amet.
                </p>
                <div class="footer-icons">
                    <a href="https://www.linkedin.com/in/atanasdachenski">
                        <img src="http://i1204.photobucket.com/albums/bb414/Atanas_Dachenski/NaskoRestaurant/fbFoot_zpszmrtuzgb.png">
                    </a>
                    <a href="https://www.linkedin.com/in/atanasdachenski">
                        <img src="http://i1204.photobucket.com/albums/bb414/Atanas_Dachenski/NaskoRestaurant/twFoot_zpsqz46tub1.png" />
                    </a>
                    <a href="https://github.com/adachenski/NaskosRestaurant">
                        <img src="http://i1204.photobucket.com/albums/bb414/Atanas_Dachenski/NaskoRestaurant/gitFoot2_zpsy0zjlnc0.png" />
                    </a>
                    <a href="https://www.linkedin.com/in/atanasdachenski">
                        <img src="http://i1204.photobucket.com/albums/bb414/Atanas_Dachenski/NaskoRestaurant/inFoot_zpsgzlbw53l.png" />
                    </a>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>
