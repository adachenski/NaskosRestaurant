@using Forloop.HtmlHelpers 
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nasko's Restorant</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    <script>
        $(function () {

            $("#video-modal").bind("loadedmetadata", function () {
                var width = this.videoWidth;
                var height = this.videoHeight;
                // ...
                console.log(width)
                console.log(height)
            });
            var v = $(window).height() / $(window).width();
            v = v * 100;
            console.log(v);
            if (v>85) {
                console.log(true)
            }
        });

    </script>
    <div class="container-fluid" style="background-color:ThreeDFace;color:#fff;height:600px;position:relative;padding:20px">
					<div class="modal-container" style="position:absolute;top:0%;
	left:0%;
	height:100%;
	width:100%;
	overflow: hidden;">
						<video id="video-modal"   style="position:absolute;
	z-index:0;width:100%;opacity:0.5"  loop="" autoplay="" muted="" poster="https://d35892l6ckdunh.cloudfront.net/res/images/video-fallback.jpg">
							<source src="https://d35892l6ckdunh.cloudfront.net/res/videos/index-video.mp4" type="video/mp4">
							<source src="https://d35892l6ckdunh.cloudfront.net/res/videos/index-video.webm" type="video/webm">
						</video>
					</div><!-- /.container -->
				</div><!-- /#index-hero-->
    @if (!Request.IsAuthenticated)
    {
        @Html.Partial("LoginModal")
    }
    <div class="navbar navbar-inverse" data-spy="affix" data-offset-top="600">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nasko's Restorant", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Ask question", "Ask", "Questions")</li>
                    <li>@Html.ActionLink("Feedbacks", "Create", "CommentForm")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Library</a></li>
            <li class="active">Data</li>
        </ol>

        @if (TempData["Notification"] != null)
        {
            <div class="alert alert-info" role="alert">@this.TempData["Notification"]</div>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href="https://github.com/NikolayIT/ForumSystem">open source forum system</a></p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    @Html.RenderScripts()
</body>
</html>
