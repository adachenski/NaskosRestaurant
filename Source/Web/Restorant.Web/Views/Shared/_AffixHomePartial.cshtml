    <script>
        $(document).ready(function () {

            var distance = $('.container').offset().top,
            $window = $(window);

            $window.scroll(function () {
                if ($window.scrollTop() >= distance) {
                    $('.left-scroll').slideDown("slow");
                }
                else {
                    $('.left-scroll').slideUp("slow");
                }
            });
        })
 
    </script>

