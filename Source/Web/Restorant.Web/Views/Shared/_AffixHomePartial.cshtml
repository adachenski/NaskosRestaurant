    <div class="container-fluid" style="position:relative">
        <div class="modal-container">
            <video id="video-modal"
                   style="position:absolute;
	               width:100%;opacity:0.6" loop="" autoplay="" muted="" poster="http://photos4.meetupstatic.com/photos/event/d/2/3/4/600_430133812.jpeg">
                <source src="~/jpgs/Noa Restaurant Intro.mp4" type="video/mp4">

                <source src="~/jpgs/Noa Restaurant Intro.webm" type="video/webm">
            </video>

            <div class="wrap">

                <img id="chef" style="height:600px;left:-200px; position:absolute" src="~/jpgs/chef3.png" />

                <img id="naskosRestaurant" style="position:absolute;left:-400px;
                     top:30px;" src="~/jpgs/NaskosRestaurant2.png" />

                <img id="modalScroll" style="position:absolute;"
                     src="http://www.makelaaroverzicht.nl/wp-content/themes/makelaaroverzicht/images/scroll-down.gif" />

                <img class="modalImg" style="position:absolute;left:-400px"
                     src="http://www.lagos.me.uk/wpimages/wp135b02df_06.png" />

