<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nasko's Restorant</title>

    <link rel='stylesheet' media='screen and (min-width: 120px) and (max-width: 701px)' href='~/Content/medium.css' />
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", false)
</head>
<body>
    <video id="video-background" loop="" autoplay="" muted="" poster="http://photos4.meetupstatic.com/photos/event/d/2/3/4/600_430133812.jpeg">
        <source src="~/jpgs/Noa Restaurant Intro.mp4" type="video/mp4">
        <source src="~/jpgs/Noa Restaurant Intro.webm" type="video/webm">
    </video>

    <div class="container-fluid" style="z-index:1;position:relative">
        <div class="modal-container">

            <div class="wrap center">
                <img class="center" id="chef" src="~/jpgs/chef3.png" />
                <img class="center" id="naskosRestaurant" style="position:absolute" src="~/jpgs/NaskosRestaurant2.png" />
                <img id="modalScroll"
                     src="http://www.makelaaroverzicht.nl/wp-content/themes/makelaaroverzicht/images/scroll-down.gif" />
                <img class="modalImg" style="left:-300px"
                     src="http://www.lagos.me.uk/wpimages/wp135b02df_06.png" />
                <img class="modalImg" style="left:300px" src="http://www.deluxevectors.com/images/sample/national-restaurant-association.png" />
            </div>
        </div><!-- /.container -->
    </div><!-- /#index-hero-->
    @if (!Request.IsAuthenticated)
    {
        @Html.Partial("LoginModal")
    }

    <div class="container" style="padding:0">
        <div id="navigation" class="navbar navbar-inverse" data-spy="affix" data-offset-top="600" style="width:100%">
            <div class="navbar-header" style="width:100%">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Nasko's Restorant", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <style>
                #menu1:hover{
                    background-color:black !important;
                }
            </style>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ">
                    <li class="dropdown">
                        <button  style="background-color:#2780E3;border:none;border-right:1px solid #6290C4; height:50px;" class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                            Home
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">W3Schools</a></li>
                            <li role="presentation" class="divider"></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">HTML</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">CSS</a></li>
                            <li role="presentation" class="divider"></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">About Us</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Ask question", "Ask", "Questions")</li>
                    <li>@Html.ActionLink("Feedbacks", "Create", "CommentForm")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content site">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Library</a></li>
            <li class="active">Data</li>
        </ol>

        @if (TempData["Notification"] != null)
            {
            <div class="alert alert-info" role="alert">@this.TempData["Notification"]</div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href="https://github.com/NikolayIT/ForumSystem">open source forum system</a></p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/LoginModal.js"></script>
</body>
</html>
