@model Restorant.Web.ViewModels.CommentForm.CommentFormViewModel
@{
    ViewBag.Title = "Write a Feedback";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Create", "CommentForm", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">

        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", style = "opacity: 0.7", required = "required" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", style = "opacity: 0.7", rows = 7, required = "required" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send Feedback"/>
        </div>
    </div>

}

@{Html.RenderAction("_Index", "PageableComment");}